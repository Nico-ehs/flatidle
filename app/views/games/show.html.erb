<h1>Games Page</h1>
<% @game.update_time %>
<p>Welcome <%= @game.user.name%></p>


<!--<p><%= @game.user.name%></p>-->
<p><%= "#{@game.seconds_passed} seconds passed" %></p>

<h1>Stocks</h1>
<% @game.stocks.each do |stock|%>
    <p><%= "#{stock.resource_name}: #{stock.amount}" %></p>
<% end %>

<h1>Producers</h1>
<% @game.producers.each do |producer|%>
    <p><%= "Producing : #{(producer.amount)*(producer.base_rate)} per second" %></p>
<% end %>



